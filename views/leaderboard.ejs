<!DOCTYPE html>
<html>
  <head>
    <title>Leaderboard | Geoguesser</title>
    <link rel="apple-touch-icon" sizes="180x180" href="./Images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="./Images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="./Images/favicon-16x16.png">
    <link rel="manifest" href="Images/site.webmanifest">
    <link rel="stylesheet" href="styles_leaderboard.css">
    <link rel="stylesheet" href="output.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  </head>
  <body>
    <%- include("./navbar"); %>
    <h1 class="mt-40 lg:mt-32 mb-12 text-3xl lg:text-4xl font-bold">Leaderboard ğŸ†</h1>
    <div class="table ">
      <div id="leaderboardBody" class="">
        <% leaderboard.forEach((usr, index) => { %>
          
        <% if(user.displayName === usr.name) { %>
          
          <div class=" rows !bg-green-500  relative">
            <div style="margin-left: 1rem;"><%= index + 1 %></div>
            <div style="font-weight: 600;"><%= usr.name %> (You) </div>
            <div class="absolute top-[-10px] left-[-10px] bg-red-500 rounded-full px-2 py-1 text-xs text-white " style="margin-right: 1rem;"><%= usr.level %></div>
            <div  style="margin-right: 1rem;"><%= usr.score %></div>
          </div>
       
        <% } else { %>
        <div class=" rows relative">
          <div style="margin-left: 1rem;"><%= index + 1 %></div>
          <div style="font-weight: 600;"><%= usr.name %> 
            <% if(24 - usr.email.slice(-20).slice(0,2)===1) { %>
              (1st Year)
            <% } else if(24 - usr.email.slice(-20).slice(0,2)===2) { %>
              (2nd Year)
            <% } else if(24 - usr.email.slice(-20).slice(0,2)===3) { %>
              (3rd Year)
            <% } else if(24 - usr.email.slice(-20).slice(0,2)===4) { %>
              (4th Year)
            <% } %>
          </div>
          <div class="absolute top-[-10px] left-[-10px] bg-red-500 rounded-full px-2 py-1 text-xs text-white " style="margin-right: 1rem;"><%= usr.level %></div>
          <div  style="margin-right: 1rem;"><%= usr.score %></div>
        </div>
        <% } %>

        <% }); %>
      </div>
    </div>
    
  </body>
</html>
